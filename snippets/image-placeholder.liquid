{%- comment -%}
  Renders a placeholder SVG image.
  
  Usage:
  {% render 'image-placeholder', type: 'product', width: 600, height: 600 %}
{%- endcomment -%}

{%- liquid
  assign placeholder_width = width | default: 400
  assign placeholder_height = height | default: 400
  assign placeholder_type = type | default: 'product'

  case placeholder_type
    when 'product'
      assign placeholder_text = 'Product Image'
    when 'collection'
      assign placeholder_text = 'Collection'
    when 'blog'
      assign placeholder_text = 'Blog Image'
    when 'hero'
      assign placeholder_text = 'Hero Image'
    else
      assign placeholder_text = 'Image'
  endcase
-%}

<img
  src="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 {{ placeholder_width }} {{ placeholder_height }}'%3E%3Crect fill='%23f5f0eb' width='{{ placeholder_width }}' height='{{ placeholder_height }}'/%3E%3Ctext x='50%25' y='50%25' fill='%23999' text-anchor='middle' dy='.3em' font-family='sans-serif' font-size='14'%3E{{ placeholder_text }}%3C/text%3E%3C/svg%3E"
  alt="{{ placeholder_text }}"
  width="{{ placeholder_width }}"
  height="{{ placeholder_height }}"
  loading="lazy"
>
