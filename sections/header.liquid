{%- comment -%}
  Minimal floating header with camera logo and cart icon.
{%- endcomment -%}

{%- style -%}
  :root {
    --logo-size: {{ section.settings.logo_size | default: 36 }}px;
    --cart-icon-size: {{ section.settings.cart_icon_size | default: 28 }}px;
  }

  .site-header {
    position: absolute;
    top: var(--announcement-banner-height, 0px);
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
  }

  .site-header__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 0.875rem;
  }

  .site-header__logo:hover {
    opacity: 0.7;
  }

  .site-header__logo img {
    width: var(--logo-size, 36px);
    height: var(--logo-size, 36px);
    object-fit: contain;
  }

  .site-header__cart {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: transform 0.2s ease;
    background: none;
    border: none;
    border-radius: 0;
    padding: 0;
  }

  .site-header__cart:hover {
    transform: scale(1.1);
    opacity: 1;
  }

  .site-header__cart svg {
    width: var(--cart-icon-size, 28px);
    height: var(--cart-icon-size, 28px);
    stroke: none;
    fill: #1a1a1a;
  }

  .cart-count {
    position: absolute;
    top: -8px;
    right: -8px;
    min-width: 18px;
    height: 18px;
    padding: 0 5px;
    background: var(--color-accent, #FF6B35);
    color: white;
    font-family: var(--font-mono);
    font-size: 0.625rem;
    font-weight: 700;
    border-radius: 9px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cart-count:empty,
  .cart-count[data-count="0"] {
    display: none;
  }
{%- endstyle -%}

<header class="site-header" data-section-id="{{ section.id }}">
  <!-- Camera Logo -->
  <a href="/" class="site-header__logo" title="Home">
    {%- if section.settings.logo_image != blank -%}
      <img
        src="{{ section.settings.logo_image | image_url: width: 72 }}"
        alt="{{ shop.name }}"
        width="36"
        height="36"
        loading="eager"
      >
    {%- else -%}
      <img
        src="{{ 'logo-camera.webp' | asset_url }}"
        alt="{{ shop.name }}"
        width="36"
        height="36"
        loading="eager"
      >
    {%- endif -%}
  </a>

  <!-- Shopping Cart -->
  <a href="/cart" class="site-header__cart" title="Cart">
    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path d="M7 18c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM1 2v2h2l3.6 7.6-1.4 2.5c-.1.2-.2.5-.2.9 0 1.1.9 2 2 2h12v-2H7.4c-.1 0-.2-.1-.2-.2l.1-.3.9-1.5h7.4c.7 0 1.4-.4 1.7-1l3.9-7c.1-.2.2-.4.2-.6 0-.6-.4-1-1-1H5.2l-.9-2H1zm16 16c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z"/>
    </svg>
    <span class="cart-count" data-count="{{ cart.item_count }}">{{ cart.item_count }}</span>
  </a>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image",
      "info": "Leave empty to use default camera logo."
    },
    {
      "type": "range",
      "id": "logo_size",
      "label": "Logo size",
      "min": 24,
      "max": 64,
      "step": 4,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "cart_icon_size",
      "label": "Cart icon size",
      "min": 20,
      "max": 40,
      "step": 2,
      "default": 28,
      "unit": "px"
    }
  ]
}
{% endschema %}
