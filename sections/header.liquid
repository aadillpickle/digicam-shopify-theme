{%- comment -%}
  Minimal floating header with camera logo and cart icon.
{%- endcomment -%}

{%- style -%}
  .site-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
  }

  .site-header__logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-text);
    font-family: var(--font-body);
    font-weight: 500;
    font-size: 0.875rem;
  }

  .site-header__logo:hover {
    opacity: 0.7;
  }

  .site-header__logo svg {
    width: 32px;
    height: 32px;
  }

  .site-header__cart {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-button);
    border-radius: 50%;
    text-decoration: none;
    transition: transform 0.2s ease, background 0.2s ease;
  }

  .site-header__cart:hover {
    transform: scale(1.05);
    opacity: 1;
    background: #333;
  }

  .site-header__cart svg {
    width: 20px;
    height: 20px;
    stroke: var(--color-button-text);
    fill: none;
  }

  .cart-count {
    position: absolute;
    top: -4px;
    right: -4px;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    background: var(--color-accent);
    color: white;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    font-weight: 700;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cart-count:empty,
  .cart-count[data-count="0"] {
    display: none;
  }
{%- endstyle -%}

<header class="site-header" data-section-id="{{ section.id }}">
  <!-- Camera Logo -->
  <a href="/" class="site-header__logo" title="Home">
    <svg viewBox="0 0 32 32" fill="none" xmlns="http://www.w3.org/2000/svg">
      <!-- Camera body -->
      <rect x="2" y="8" width="28" height="20" rx="3" fill="currentColor"/>
      <!-- Lens outer -->
      <circle cx="16" cy="18" r="7" fill="#FDF8F3"/>
      <!-- Lens middle -->
      <circle cx="16" cy="18" r="5" fill="#333"/>
      <!-- Lens inner -->
      <circle cx="16" cy="18" r="2.5" fill="#555"/>
      <!-- Lens reflection -->
      <circle cx="14.5" cy="16.5" r="1" fill="#8899bb" opacity="0.5"/>
      <!-- Flash -->
      <rect x="22" y="10" width="5" height="3" rx="1" fill="#FDF8F3"/>
      <!-- Viewfinder -->
      <circle cx="7" cy="12" r="2" fill="#555"/>
      <!-- Top bump -->
      <rect x="10" y="5" width="8" height="4" rx="1" fill="currentColor"/>
    </svg>
  </a>

  <!-- Shopping Cart -->
  <a href="/cart" class="site-header__cart" title="Cart">
    <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="9" cy="21" r="1"/>
      <circle cx="20" cy="21" r="1"/>
      <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
    </svg>
    <span class="cart-count" data-count="{{ cart.item_count }}">{{ cart.item_count }}</span>
  </a>
</header>

