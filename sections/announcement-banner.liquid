{%- if section.settings.show_banner -%}
  {%- style -%}
    :root {
      --announcement-banner-height: calc({{ section.settings.text_size }}px * 1.4 + {{ section.settings.padding_vertical }}px * 2);
    }

    .announcement-banner {
      background-color: {{ section.settings.background_color }};
      color: {{ section.settings.text_color }};
      padding: {{ section.settings.padding_vertical }}px 1rem;
      text-align: center;
      font-family: var(--font-body);
      font-size: {{ section.settings.text_size }}px;
      line-height: 1.4;
      position: relative;
      z-index: 101;
    }

    .announcement-banner__content {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      max-width: 1200px;
      margin: 0 auto;
    }

    .announcement-banner__text {
      margin: 0;
    }

    .announcement-banner__link {
      color: {{ section.settings.text_color }};
      text-decoration: underline;
      text-underline-offset: 3px;
      font-weight: 500;
      transition: opacity 0.2s ease;
    }

    .announcement-banner__link:hover {
      opacity: 0.8;
    }

    .announcement-banner__close {
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      color: {{ section.settings.text_color }};
      cursor: pointer;
      padding: 0.25rem;
      opacity: 0.7;
      transition: opacity 0.2s ease;
      display: {% if section.settings.show_close_button %}flex{% else %}none{% endif %};
      align-items: center;
      justify-content: center;
    }

    .announcement-banner__close:hover {
      opacity: 1;
    }

    .announcement-banner__close svg {
      width: 16px;
      height: 16px;
    }

    @media (max-width: 768px) {
      .announcement-banner {
        font-size: {{ section.settings.text_size | minus: 2 }}px;
        padding: {{ section.settings.padding_vertical | divided_by: 1.5 | round }}px 2.5rem;
      }
    }
  {%- endstyle -%}

  <div class="announcement-banner" data-section-id="{{ section.id }}" id="announcement-banner">
    <div class="announcement-banner__content">
      {%- if section.settings.link != blank -%}
        <a href="{{ section.settings.link }}" class="announcement-banner__link">
          {{ section.settings.text }}
        </a>
      {%- else -%}
        <p class="announcement-banner__text">{{ section.settings.text }}</p>
      {%- endif -%}
    </div>

    {%- if section.settings.show_close_button -%}
      <button class="announcement-banner__close" type="button" aria-label="Close announcement" onclick="this.parentElement.style.display='none';">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    {%- endif -%}
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Announcement Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_banner",
      "label": "Show banner",
      "default": true
    },
    {
      "type": "text",
      "id": "text",
      "label": "Banner text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Optional - makes the text clickable"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#1A1A1A"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text size",
      "min": 11,
      "max": 18,
      "step": 1,
      "default": 14,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Vertical padding",
      "min": 6,
      "max": 20,
      "step": 2,
      "default": 12,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "show_close_button",
      "label": "Show close button",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Announcement Banner"
    }
  ]
}
{% endschema %}
