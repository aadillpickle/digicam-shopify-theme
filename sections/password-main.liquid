{%- style -%}
  .password-page {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(
      135deg,
      #FDF8F3 0%,
      #FDF8F3 50%,
      #E8E0F0 100%
    );
    text-align: center;
  }

  .password-logo {
    font-family: var(--font-display);
    font-size: 2rem;
    margin-bottom: 3rem;
  }

  .password-headline {
    font-family: var(--font-display);
    font-size: clamp(2rem, 8vw, 5rem);
    font-style: italic;
    margin-bottom: 1rem;
  }

  .password-message {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 400px;
    margin-bottom: 2rem;
  }

  .password-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    max-width: 300px;
  }

  .password-input {
    padding: 1rem;
    border: 1.5px solid var(--color-border);
    border-radius: var(--radius-full);
    font-family: var(--font-body);
    font-size: 1rem;
    text-align: center;
    background: white;
  }

  .password-input:focus {
    outline: none;
    border-color: var(--color-text);
  }

  .password-footer {
    margin-top: 3rem;
    font-size: 0.875rem;
    color: var(--color-text-light);
  }
{%- endstyle -%}

<section class="password-page" data-section-id="{{ section.id }}">
  <div class="password-logo">{{ shop.name }}</div>

  <h1 class="password-headline">Coming Soon</h1>

  <p class="password-message">
    {{ section.settings.message | default: "We're working on something special. Enter the password to get early access." }}
  </p>

  {%- form 'storefront_password', class: 'password-form' -%}
    {%- if form.errors -%}
      <div class="form-errors" style="color: #e53e3e; margin-bottom: 1rem;">
        {{ form.errors | default_errors }}
      </div>
    {%- endif -%}

    <input
      type="password"
      name="password"
      class="password-input"
      placeholder="Enter password"
      required
    >

    <button type="submit" class="btn btn-primary">Enter</button>
  {%- endform -%}

  <div class="password-footer">
    <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</p>
    {%- if shop.password_message != blank -%}
      <p>{{ shop.password_message }}</p>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Password Page",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "message",
      "label": "Message",
      "default": "We're working on something special. Enter the password to get early access."
    }
  ]
}
{% endschema %}
